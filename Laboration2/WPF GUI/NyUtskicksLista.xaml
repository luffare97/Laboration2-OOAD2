<Window x:Class="WPF_GUI.NyUtskicksLista"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_GUI"
        mc:Ignorable="d"
        Title="NyUtskicksLista" Height="460" Width="750">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="1" Grid.Row="1" Margin="10">Titel: </Label>
        <TextBox Grid.Column="2" Grid.Row="1" Width="300" Margin="10"></TextBox>

        <Label Grid.Column="1" Grid.Row="2" Margin="10">Meddelande: </Label>
        <RichTextBox Grid.Column="2" Grid.Row="2" Margin="10"></RichTextBox>

        <Label Grid.Column="4" Grid.Row="1" Margin="10">Mottagare: </Label>
        <ListBox Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="2" Width="250" Height="300" Margin="10"></ListBox>

        <Button x:Name="TillbakaBtn" Grid.Column="1" Grid.Row="4" Width="80" Height="28" Margin="10">Tillbaka</Button>
        <Button x:Name="SparaBtn"  Grid.Column="5" Grid.Row="4" Width="80" Height="28" Margin="10" HorizontalAlignment="Right">Spara</Button>
        
        
        
    </Grid>
</Window>
