<Window x:Class="WPF_GUI.GDPR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_GUI"
        mc:Ignorable="d"
        Title="GDPR" Height="500" Width="460">
    <Grid>
        <StackPanel Margin="10">
            <Label>För att skapa ett konto måste du läsa och godkänna nedanstående: </Label>

            <Border BorderBrush="Black" BorderThickness="2">
                <TextBlock Height="350" Width="440">Här står det en massa GDPR saker som du måste godkänna för att få skapa ett konto</TextBlock>
            </Border>

            <CheckBox Margin="0 10">Jag har läst och förstår</CheckBox>
            
            
            <StackPanel Orientation="Horizontal">
                <Button x:Name="NejBtn" Height="30" Width="100">Godkänner inte</Button>
                <Button x:Name="JaBtn" Height="30" Width="70" Margin="260 0">Godkänner</Button>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
